<%= form_for @category, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :parent_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :parent_id, Category.all, :id, :name, {:include_blank => true}, {:class => 'select2 text_field span2'} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field span2' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :budgeted_cents, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :budgeted_cents, :class => "text_field span2" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn' %>
  </div>
<% end %>
